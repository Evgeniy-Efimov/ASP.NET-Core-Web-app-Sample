@using WebApp.ViewModels

@model AuthDataViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

@using (Html.BeginForm("Login", "Auth"))
{
    <div class="container container-login">
        @Html.ValidationSummary(true)
        <div class="form-group">
            <p>
                @Html.EditorFor(x => x.Login, new { htmlAttributes = new { @placeholder = "login", @class="form-control" } })
            </p>
        </div>
        <div class="form-group">
            <p>
                @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @type = "password", @placeholder = "password", @class="form-control" } })
            </p>
        </div>
        <div class="form-group">
            <p>
                <div>
                    <button type="submit" class="btn btn-primary btn-login">Login</button>
                </div>
            </p>
        </div>
    </div>
}